#include <iostream>
using namespace std;
int main(){
	int grade,aCount=0,bCount=0,cCount=0,dCount=0,eCount=0,fCount=0;
	cout<<"Enter the letter grade:";
	cout<<"\nEnter the EOF character to end input:";
    while( ( grade = cin.get() ) != EOF ) {
    if( grade == 'A' || grade == 'a' ){
    	++aCount;
        
	}
    else if( grade == 'B' || grade == 'b' ){
    	++bCount;  
		
	}
        
    else if( grade == 'C' || grade == 'c' ){
    	++cCount;
	
	}
         
    else if( grade == 'D' || grade == 'd' ){
    	 ++dCount;
        
	}   
    else if( grade == 'F' || grade == 'f' ){
       ++fCount;
    	
	}
    else
       cout<<"\nIncorrect letter grade \nEnter a new grade" ;


cout<<"\nTotals for each letter grade are:" ;
cout<<"\nA:"<<aCount ;
cout<<"\nB:"<<bCount ;
cout<<"\nC:"<<cCount ;
cout<<"\nD:"<<dCount ;
cout<<"\nF:"<<fCount<<endl;
}
return 0;
}
